<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_e3"
              android:orientation="vertical">
    <!--path-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/file_category_tv_path"
            style="@style/WY.Theme.TextAppearance.Common.SingleLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/wy.text.common_h2"
            android:textSize="12sp"
            tools:text="存储卡:/"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/wy.divider.narrow"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/file_category_tv_back_last"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_file_back"
            android:gravity="center"
            android:text="上一级"
            android:textColor="@color/wy.text.common_h2"
            android:textSize="12sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_file_category"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>